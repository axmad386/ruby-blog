<%= form_with model: blog_post do |form| %>
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>

  <div>
  <%= form.label :title %>
  <%= form.text_field :title %>
  </div>

  <div>
  <%= form.label :body %>
  <%= form.text_area :body %>
  </div>
  <%= form.button %>
<% end %>
